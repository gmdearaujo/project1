<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.msu.scrabble.project2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.msu.scrabble.project2.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:windowSoftInputMode="adjustPan" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.msu.scrabble.project2.DrawActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="edu.msu.scrabble.project2.ColorSelectActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="edu.msu.scrabble.project2.EditActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="edu.msu.scrabble.project2.GuessActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name="edu.msu.scrabble.project2.CompleteActivity"
            android:label="@string/title_activity_complete" >
        </activity>
        <activity
            android:name="edu.msu.scrabble.project2.DoneActivity"
            android:label="@string/title_activity_done" >
        </activity>
        <activity
            android:name="edu.msu.scrabble.project2.DialogDoneActivity"
            android:label="@string/title_activity_dialog_done" >
        </activity>
        <activity
            android:name="edu.msu.scrabble.project2.DialogDone"
            android:label="@string/title_activity_dialog_done" >
        </activity>
        <activity
            android:name="edu.msu.scrabble.project2.FinalActivity"
            android:label="@string/title_activity_final" >
        </activity>
        <activity
            android:name="edu.msu.scrabble.project2.NewUserActivity"
            android:label="@string/title_activity_new_user" >
        </activity>
    </application>

</manifest>